---
import Image from "astro/components/Image.astro";
import prestador from "../../assets/iconos-beneficios/afiliados.png";
import IconoChecked from "./IconoChecked.astro";
const { titulo, texto, listaCheckeds,imagen } = Astro.props;
---

<article>
  <aside>
    <Image src={imagen} alt={`Imagen de ${titulo}`} class="imagen" />
  </aside>
  <div class="left">
    <h2>{titulo}</h2>
    <p>{texto}</p>
    <ul>
      {
        // @ts-ignore
        listaCheckeds?.map(ele => 
          <li>
            <IconoChecked /> {ele}
          </li>
        )
      }
    </ul>
  </div>
</article>

<style>
  /* Estilos de imagen de la izquierda */
  article {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row-reverse;
  }
  aside {
    margin-left: -30px;
    padding: 3rem;
    border-radius: 20px;
    background-color: rgb(10, 10, 58);
  }
  .imagen {
    width: 100px;
    height: auto;
  }
  .left {
    width: calc(100% - 90px);
    min-height: 220px;
    background-color: rgb(255, 255, 255);
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.226);
    border-radius: 20px;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    & h2 {
      color: #3498db;
      font-size: calc(16px + 0.5vw);
    }
    & p {
      font-size: calc(12px + 0.3vw);
    }
    ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      & li {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: calc(10px + 0.2vw);
      }
    }
  }
  @media (max-width: 750px) {
    article {
      flex-direction: column;
    }
    aside {
      margin-left: 0;
      padding: 1rem;
      margin-bottom: -30px;
      z-index: 2;
    }
    .left {
      padding-top: 40px;
      & h2 {
        text-align: center;
      }
      & p {
        text-align: center;
      }
    }
    .imagen {
      width: 60px;
      height: auto;
    }
  }
</style>
