---
const { titulo, texto, numero } = Astro.props
import Image from 'astro/components/Image.astro'
import estrellaIcono from '../../assets/estrella.png'
---

<article>
  <div class="header-article">
    <div class="icono">
      <Image src={estrellaIcono} alt="Estrella" />
    </div>
    <h1>
      {numero}
    </h1>
  </div>
  <div class="body-article">
    <h3>{titulo}</h3>
    <p>{texto}</p>
  </div>
</article>
<style>
  /* Contenedor principal */
  article{
    width: 250px;
    height: 250px;
    border-radius: 20px;
    background-color: rgb(255, 255, 255);
    padding: 0 1rem;
    transition: all ease .2s;
    box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.075);
    &:hover{
      transform: scale(1.02);
      box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.151);
    }
  }
  /* Estilos de header */
  .header-article{
    display: flex;
    justify-content: space-between;
    height: 70px;
    align-items: center;
  }
  .icono{
    padding: 8px 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ff61612f;
    border-radius: 5px;
  }
  h1{
    color: #99ecff;
  }

  /* Estilos de body */
  .body-article{
    height: 180px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  h3{
    font-size: calc(12px + 0.5vw);
    font-weight: 500;
    color: rgb(28, 28, 116);
  }
  p{
    font-size: calc(10px + 0.2vw);
  }
  @media (max-width: 750px) {
    article{
      height: auto;
      padding-bottom: 1rem;
    }
    .body-article{
      height: auto;
    }
  }
</style>
